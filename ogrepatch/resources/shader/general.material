////////////////////////////////
// VERTEX & FRAGMENT PROGRAMS //
////////////////////////////////

vertex_program label_vs hlsl
{
    source general.hlsl
    target vs_3_0
    entry_point label_vs
    optimisation_level 3
 
    default_params
    {
        param_named_auto wvpMat worldviewproj_matrix
		param_named_auto texMat texture_matrix 0
		param_named_auto wMat world_matrix
		param_named_auto eyePos camera_position
		param_named offset float 0
    }
}

vertex_program room_vs hlsl
{
    source general.hlsl
    target vs_3_0
    entry_point room_vs
    optimisation_level 3
 
    default_params
    {
        param_named_auto wvpMat worldviewproj_matrix
		param_named_auto texMat texture_matrix 0
		param_named_auto wMat world_matrix
    }
}

vertex_program ambient_vs hlsl
{
    source general.hlsl
    target vs_3_0
    entry_point ambient_vs
